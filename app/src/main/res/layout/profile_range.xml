<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subBackground"

    >


    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소공개 설정" />
        <RadioGroup
            android:id="@+id/addressRadio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/addressRangeOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="30dp"

            android:text="전체주소 공개" />
        <RadioButton
            android:id="@+id/addressRangeOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"


            android:text="상세주소 공개 안함" />
        </RadioGroup>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_below="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="프로필 공개 범위 설정" />
        <RadioGroup
            android:id="@+id/profileRadio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/profileRangeOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginTop="30dp"

                android:text="전체 공개" />
            <RadioButton
                android:id="@+id/profileRangeOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"


                android:text="같은 동 사람들에게만 공개" />
        </RadioGroup>
    </FrameLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frame2"
        android:layout_marginTop="10dp"
        android:text="저장"
        />
</RelativeLayout>
