<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subBackground"

    >

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/profile" />

    <Button
        android:id="@+id/infobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile"/>

    <Button
        android:id="@+id/profilebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/infobtn"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:text="프로필 공개 범위 설정" />

    <Button
        android:id="@+id/alarambtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profilebtn"
        android:background="@color/white"
        android:layout_marginTop="15dp"

        android:text="알람 설정" />
    <Button
        android:id="@+id/updateContentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/alarambtn"
        android:background="@color/white"
        android:layout_marginTop="15dp"

        android:text="내가 작성한 글 관리" />


</RelativeLayout>
